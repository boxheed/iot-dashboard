{
  "name": "iot-dashboard",
  "version": "1.0.0",
  "description": "A web-based smart home dashboard for monitoring and controlling IoT devices",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "dev:server": "npm run dev --workspace=backend",
    "dev:full": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "build": "npm run build --workspace=frontend",
    "build:server": "npm run build --workspace=backend",
    "start": "npm run start --workspace=backend",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}